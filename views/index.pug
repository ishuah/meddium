extends layout

block content
  .container-stream
    -
    each post in posts
      .item
        .item-card
          .item-card-inner
            .post
              .marginBottom10.clearfix
                .post-meta.floatLeft
                  .post-meta-subreddit
                    a.link(href='/r/'+post['data']['subreddit']) r/#{post['data']['subreddit']}
              .div
                a(href=post['data']['permalink'])
                  section
                    h3.post-title= post['data']['title']
                  section
                    -
                    if post['data']['preview']
                      if post['data']['preview']['images'][0]['resolutions'].length >= 4
                        img.post-image(src=post['data']['preview']['images'][0]['resolutions'][3]['url'], width=618)
                      else if post['data']['preview']['images'][0]['resolutions'].length >= 3
                        img.post-image(src=post['data']['preview']['images'][0]['resolutions'][2]['url'], width=320)
  .sidebar
